        android:fontFamily="@font/bungee_inline"
        android:text="@string/movie"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        />-->
    <LinearLayout
        android:id="@+id/dai_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_hd"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="HD"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/background_layer"
            android:textAllCaps="true"
            />
        <TextView
            android:id="@+id/txt_sd"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="SD"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:textSize="18sp"
            android:background="@drawable/background_star_rating"/>
    </LinearLayout>
    <TextView
        android:layout_below="@id/dai_1"
        android:id="@+id/dai_movie_watch"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/watch_now"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:paddingStart="20dp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_star_rating"
        app:drawableStartCompat="@drawable/ic_cinema" />
    <TextView
        android:layout_below="@id/dai_movie_watch"
        android:id="@+id/dai_movie_downLoad"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:text="@string/download"
        android:layout_margin="16dp"
        android:paddingStart="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:background="@drawable/background_star_rating"
        app:drawableStartCompat="@drawable/ic_baseline_arrow_downward_24" />
</RelativeLayout>